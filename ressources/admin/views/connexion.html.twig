{% extends 'layout.html.twig' %}
{% block title %}
Panel ONLSGP - Administration - Connexion
{% endblock %}
{% block contenu %}
<div id="connexion" class="col-xs-10 col-sm-4">
<h1 class="text-center">ONLGSP Administration</h1>
    <div id="blocConnexion" class="well" style="padding-bottom: 0; margin-bottom: 0;">
        <form class="form" method="post" action="">
    	 
	 <div class="form-group">
    	     {{ form_row(form.pseudo) }}
    	 </div>

    	 <div class="form-group">
	     {{ form_row(form.password) }}
    	 </div>
    
    	 <div class="form-group">
    	 {{ form_row(form.submit) }}
    	 </div>
	 
	 {{ form_row(form._token) }}
    	 </form>
    </div>
    {% if error!='' %}
    <div class="alert alert-danger fade in">{{ error }}</div>
    {% endif %}
</div>
{% endblock %}